@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUserAdmin.cshtml";
}
<style>
    .pagination li {
        padding: 8px 12px;
    }
</style>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Basic Table</h5>
        <div class="card-body">
            <div class="table-responsive">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">

                    <div class="row">
                        <div class="col-sm-12 col-md-6"><div class="dataTables_length" id="DataTables_Table_0_length"><label>Show <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6">

                            <div id="DataTables_Table_0_filter" class="dataTables_filter" style="display: inline;">
                                <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0"></label>
                            </div>
                            <button style="margin-left: 90px;" type="button" class="btn btn-primary btnAdd" data-toggle="modal" data-target="#myModaladd">Thêm Mới</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered first dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 132px;">User Name</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 92px;">Name</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 41px;">Address</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 88px;">Email</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 73px;">Phone</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 73px;"></th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 73px;"></th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="odd" id="row_@item.MaUser">
                                            <td class="sorting_1">@item.UserName</td>
                                            <td>@item.Name</td>
                                            <td>@item.Address</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td><button type="button" class="btn btn-primary btnEdit" data-toggle="modal" data-target="#myModal" data-id="@item.MaUser">Sửa</button></td>
                                            <td>@Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaUser, @type = "button", @class = "btn btn-delete" }, new AjaxOptions { Confirm = "Bạn có muốn xóa?", OnComplete = "$('#row_" + @item.MaUser + "').remove()", HttpMethod = "Delete" })</td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr><th rowspan="1" colspan="1">User Name</th><th rowspan="1" colspan="1">Name</th><th rowspan="1" colspan="1">Address</th><th rowspan="1" colspan="1">Email</th><th rowspan="1" colspan="1">Phone</th><th rowspan="1" colspan="1"></th><th rowspan="1" colspan="1"></th></tr>
                                </tfoot>
                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sửa User</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="" class="col-form-label">UserName</label>
                    <input type="hidden" id="txtMa">
                    <input id="txtUserName" disabled type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Password</label>
                    <input id="txtPassword" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Name</label>
                    <input id="txtName" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Address</label>
                    <input id="txtAddress" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Phone</label>
                    <input id="txtPhone" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Email</label>
                    <input id="txtEmail" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" id="ckStatus" checked="" class="custom-control-input">
                        <span class="custom-control-label">Status</span>
                    </label>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave">Save</button>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="myModaladd">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm User</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="" class="col-form-label">UserName</label>
                    <input type="hidden" name="" id="txtMaadd" />
                    <input id="txtUserNameadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Password</label>
                    <input id="txtPasswordadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Name</label>
                    <input id="txtNameadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Address</label>
                    <input id="txtAddressadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Phone</label>
                    <input id="txtPhoneadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="col-form-label">Email</label>
                    <input id="txtEmailadd" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" id="ckStatusadd" checked="" class="custom-control-input">
                        <span class="custom-control-label">Status</span>
                    </label>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveadd">Thêm</button>
            </div>
        </div>
    </div>
</div>
